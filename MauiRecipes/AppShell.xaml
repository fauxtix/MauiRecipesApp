<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiRecipes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiRecipes.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
        Shell.TabBarIsVisible="False"
    Title="MauiRecipes">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate local:FavoritesPage}"
            Route="FavoritesPage" />
        <ShellContent 
                Title="Favorite Detail"
                ContentTemplate="{DataTemplate local:ViewFavoriteRecipeDetailPage}"
                Route="ViewFavoriteRecipeDetailPage" />
        <ShellContent
            Title="Recipes"
            ContentTemplate="{DataTemplate local:RecipesMainPage}"
            Route="RecipesMainPage" />
        <ShellContent 
                Title="Recipe Detail"
                ContentTemplate="{DataTemplate local:ViewRecipePage}"
                Route="ViewRecipePage" />


    </FlyoutItem>
</Shell>