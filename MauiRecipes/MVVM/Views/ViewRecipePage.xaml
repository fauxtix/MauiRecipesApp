<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MauiRecipes.MVVM.Models"
             xmlns:viewmodels="clr-namespace:MauiRecipes.MVVM.ViewModels"
             x:Class="MauiRecipes.MVVM.Views.ViewRecipePage"
             x:DataType ="viewmodels:RecipeDetailViewModel"
             Title="View Recipe Page">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Return"  
                     Command="{Binding GoBackCommand}"
                 IconImageSource="icon_close.svg" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MediumLabelBold" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="Poppins"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
            <Style x:Key="MediumLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="Poppins"/>
            </Style>
            <Style x:Key="LargeLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Poppins"/>
            </Style>
            <Color x:Key="LightBackground">#FAF9F8</Color>
            <Color x:Key="DarkBackground">Black</Color>
            <Color x:Key="Primary">#FFC107</Color>

            <Style x:Key="CommonAddButtonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="End" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HeightRequest" Value="35" />
                <Setter Property="WidthRequest" Value="60" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0, 3, 0, 8" />
                <Setter Property="BackgroundColor" Value="SteelBlue" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">
            <Grid RowDefinitions="Auto,Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, *">
                <BoxView
                    BackgroundColor="{StaticResource Primary}"
                    Grid.RowSpan="2"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"/>
                <Border StrokeShape="RoundRectangle 50"
                    Stroke="White"
                    StrokeThickness="6"
                    HeightRequest="260"
                    WidthRequest="360"
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Image Aspect="AspectFill"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           Source="{Binding RecipeInfo.image}"
                           HeightRequest="260"
                           WidthRequest="340"/>
                </Border>
                <Frame Grid.Row="1" CornerRadius="30" HasShadow="True" Margin="0,5,0,5" BorderColor="Black"
                       HeightRequest="105" WidthRequest="350">
                    <Editor  
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="LightCoral"
                       Text="{Binding RecipeInfo.title}" 
                       Margin="0"/>
                </Frame>

                <Border Grid.Row="2" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 22"
                    Background="#fff"
                    Padding="8,2,8,0"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">

                    <Frame Grid.Row="2" CornerRadius="40" HasShadow="False" Margin="5" BorderColor="Transparent">
                        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" 
                          RowSpacing="5"
                          HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource MediumLabel}" >Credits</Label>
                            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MediumLabelBold}"  Text="{Binding RecipeInfo.creditsText}" />
                            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Gluten free</Label>
                            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.glutenFree}" />
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Health score</Label>
                            <Label Grid.Row="2" Grid.Column="1"  Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.healthScore}" />
                            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource MediumLabel}" >Price per serving</Label>
                            <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.pricePerServing}" />
                            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource MediumLabel}" >Ready in minutes</Label>
                            <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.readyInMinutes}" />
                            <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource MediumLabel}" >Servings</Label>
                            <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.servings}" />
                            <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Sustainable</Label>
                            <Label Grid.Row="6" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.sustainable}" />
                            <Label Grid.Row="7" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Vegan</Label>
                            <Label Grid.Row="7" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.vegan}" />
                            <Label Grid.Row="8" Grid.Column="0" Style="{StaticResource MediumLabel}" >Vegetarian</Label>
                            <Label Grid.Row="8" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.vegetarian}" />

                            <Label Grid.Row="9" Grid.Column="0" Style="{StaticResource MediumLabel}" >Cheap</Label>
                            <Label Grid.Row="9" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.cheap}" />
                        </Grid>
                    </Frame>
                    
                    
                </Border>
                <Border Grid.Row="10" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 22"
                    Background="#fff"
                    Padding="18,10,18,10"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">
                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false"  >
                        <mct:Expander.Header>
                            <Frame 
                                    BorderColor="Black"
                                    BackgroundColor="LightSteelBlue"
                                    CornerRadius="10">
                                <Label Text="Summary" FontSize="14" HorizontalOptions="Center"
                                       FontFamily="Poppins"
                                       FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>

                            <VerticalStackLayout>
                                <Label TextType="Html" FontSize="14" FontAttributes="None" Margin="0, 10"
                                        Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.summary}" />
                            </VerticalStackLayout>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>
                <Border Grid.Row="11" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 22"
                    Background="#fff"
                    Padding="18,10,18,10"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">
                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false"  >
                        <mct:Expander.Header>
                            <Frame 
                                    BorderColor="Black"
                                    BackgroundColor="LightSteelBlue"
                                    CornerRadius="10">
                                <Label Text="Instructions" FontSize="14" 
                                       HorizontalOptions="Center"
                                       FontFamily="Poppins"
                                       FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>

                            <VerticalStackLayout>
                                <Label TextType="Html" FontSize="14" FontAttributes="None"
                                       FontFamily="Poppins"
                                       Margin="0, 10"  
                                       Style="{StaticResource MediumLabelBold}" Text="{Binding RecipeInfo.instructions}" />
                            </VerticalStackLayout>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>

            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>